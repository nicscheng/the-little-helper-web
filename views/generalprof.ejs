<!DOCTYPE html>
<html lang="en">
<head>
        <title>Feed</title>
	    <link rel="stylesheet" href="/css/feed.css">
        <link rel="stylesheet" href="/css/index_css.css">
        <link rel="stylesheet" href="/css/style.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <% if(isLoggedIn) { %>
        <div class="bar">
        
            <span class="logo"></span>
            <span class="sitename">The Little Helper</span>
            <span class="search_con">
                <form action="/generalprof">   
                    <input type="text" method="GET" name="search" placeholder="Profiles"></> 
                    <button type="submit" value="Search">Search</button>
                </form>
                
                <!--
                    <a href="/generalfeed">
                    <button type="submit">Submit</button> 
                </a>
                
                -->
                    
                
            </span>
            <a href="/" class="home">HOME</a>
            <a href="/logout" class="home">LOG-OUT</a>
            <a href="/profile" class="profile"></a>
            
            <!-- if nakalogin

            <a href="index2.html" class="home">HOME</a>
            <a href="index.html" class="home">LOG-OUT</a>-->
        
        </div> 
    <% } else { %>
            <div class="bar">
        
                <span class="logo"></span>
                <span class="sitename">The Little Helper</span>
                <span class="search_con">
                    <form action="/generalprof">   
                        <input type="text" method="GET" name="search" placeholder="Profiles"></> 
                        <button type="submit" value="Search">Search</button>
                    </form>
                </span>
                <a href="/" class="home">HOME</a>
                <a href="#" id="button2" class="home">LOG-IN</a>
                <a href="#" id="button3" class="home">REGISTER</a>
            
            </div> 
    <% } %>

    <div style="padding: 50px;">
        <div class="grid">
            <% users.forEach(userprof => { %>
            <div class="profile_search" >
                <div class="profile_search_img">
                    <div class="psi_text">
                        <%= userprof.username %>
                    </div>
                </div>

                <!--
                    <img src="images/profile1.png" alt="user" class="profile_search_img" style="background-color: none;">
                -->
                
                <!--
                    if may inuplaod na dp
                    <img src="images/bakingcover.jpg" alt="user" class="profile_search_img" style="background-color: none;"> -->
                    <% if(isLoggedIn) { %>
                        <% if(userprof.username == user.username) { %>
                            <a href="/profile" class="post_content" style="background-color: none;">
                                <p class="post_title" ><%= userprof.username %></p>
                            </a>
                        <% } else { %>
                        <a href="/userprofile/<%= userprof.username%>" class="post_content" style="background-color: none;">
                            <p class="post_title" ><%= userprof.username %></p>
                            </a>
                        <% } %>
                    <% } else { %>
                        <a href="/userprofile/<%= userprof.username%>" class="post_content" style="background-color: none;">
                            <p class="post_title" ><%= userprof.username %></p>
                            </a>
                    <% } %>
            </div>
            <% }) %>
        </div>
        
    </div>
    <div style="margin: 30px 50%;">
        <a href="/about">About</a>
    </div>
    <%- include ("./partials/popup"); %>

    <script type="text/javascript" src="/js/index_js.js"></script>
    
</body>
</html>
