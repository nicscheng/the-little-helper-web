<!DOCTYPE html>
<html>
    <head>
        <title>Baking</title>
	    <link rel="stylesheet" href="css/feed.css">
        <link rel="stylesheet" href="css/index_css.css">
        <link rel="stylesheet" href="css/style.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </head>
    <body>
        <%if (isLoggedIn) { %>
            <div class="bar">
                <span class="logo"></span>
                <span class="sitename">The Little Helper</span>
                <span class="search_con">
                    <form action="/baking">   
                        <input type="text" method="GET" name="search" placeholder=""></> 
                        <button type="submit" value="Search">Search</button>
                    </form>
                    <!--
                        <form action="/generalfeed">
                        <input type="text" placeholder="Search..">              
                    </form>
                    <a href="/generalfeed">
                        <button type="submit">Submit</button> 
                    </a> 
                    -->
                    
                </span>
                <a href="/" class="home">HOME</a>
                <a href="/logout" class="home">LOG-OUT</a>       
                <a href="/profile" class="profile"></a>
            </div>
        <% } else { %>
            <div class="bar">
                <span class="logo"></span>
                <span class="sitename">The Little Helper</span>
                <span class="search_con">
                    <form action="/baking">   
                        <input type="text" method="GET" name="search" placeholder=""></> 
                        <button type="submit" value="Search">Search</button>
                    </form>
                </span>
                <a href="/" class="home">HOME</a>
                <a href="#" id="button2" class="home">LOG-IN</a>
                <a href="#" id="button3" class="home">REGISTER</a>
            </div>
        <% } %>

        <div class="bakingfeed_con">
            <img src="images/bakingcover2.2.jpg" alt="baking" style="width:100%;" style="box-shadow: inset 0px 0px 10px rgba(0,0,0,0.9);">
            <div id="text">BAKING</div>   
            <div id="quote" style="white-space: pre-wrap;">"It's all about a balancing&#10;act between time,&#10;temperature and ingredients:&#10;That's the art&#10;of baking"</div>   
            <div id="name">PETER REINHART</div>
        </div>
    </div>
    <div class="grid_con" style="padding: 20px;">
        <div class="searchgen">
            <span>
                <a href="/generalfeed" style="margin-left: -200px; margin-right: 18px ;">SEE ALL POSTS</a>
                |
            </span>
                
            <span>
                <a href="/generalprof" id="button10"style="margin-left: -20px;">SEARCH PROFILE</a>
            </span>
            
            <span class="search_prof" style="display: none;">
                <form action="/generalprof">   
                    <input type="text" method="GET" name="search" placeholder=""></> 
                    <a href="" id="close5">X</a>
                    <button type="submit" id="button11"value="Search">Search</button>
                   
                </form>
                 
            </span>
        </div>
        <div class="grid">
            <% posts.forEach(post => { %>
                <div class="post">
                    <img src="images/bakingcover.jpg" alt="baking" class="post_image">
                    <div class="post_content">
                        <p class="post_title"><%= post.title %></p>
                        <p class="post_desc"><%= post.content %></p>
                    </div>
                    <div class="post_info" style="background-color: lightgray;">
                        <div>
                            <i class="material-icons">
                                star
                            </i>
                            300
                        </div>
                        <a href="post/<%= post._id%>"  class="post_link">View Article</a>
                    </div>
                </div>
                <% }) %>
            
        </div>
    </div>
    <div style="margin: 30px 50%;">
        <a href="/about">About</a>
    </div>
    <%- include ("./partials/popup"); %>
    <script type="text/javascript" src="js/index_js.js"></script>
         
    </body>
</html>
